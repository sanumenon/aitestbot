package com.charitableimpact;
import org.openqa.selenium.*;
import org.openqa.selenium.support.ui.Select;

public class {{ class_name }}Page {
    WebDriver driver;

    public {{ class_name }}Page(WebDriver driver) {
        this.driver = driver;
    }

    {% for element in elements %}
    By {{ element.name }}Locator = By.xpath("{{ element.xpath }}");

    public void interactWith{{ element.name|capitalize }}() {
        {% if element.type == "dropdown" %}
        Select dropdown = new Select(driver.findElement({{ element.name }}Locator));
        dropdown.selectByIndex(1); // Change as needed
        {% elif element.type in ["textarea", "textbox", "commentbox"] %}
        WebElement el = driver.findElement({{ element.name }}Locator);
        el.clear();
        el.sendKeys("Test input");
        {% elif element.type == "button" %}
        driver.findElement({{ element.name }}Locator).click();
        {% else %}
        WebElement el = driver.findElement({{ element.name }}Locator);
        el.sendKeys("Some value");
        {% endif %}
        ((JavascriptExecutor)driver).executeScript("arguments[0].scrollIntoView(true);", driver.findElement({{ element.name }}Locator));
    }

    public By get{{ element.name|capitalize }}Locator() {
        return {{ element.name }}Locator;
    }
    {% endfor %}
}
